{{#if fetchStatsTask.isRunning}}
  <Loader />
{{else}}
  <div class="row">
    <div class="col s12 m6">
      <div class="card grey lighten-5">
        <div class="card-content">
          <span class="card-title">Total Filled Forms</span>
          <center>
            <p>
              <h4>
                {{stats.totalParticipation}}
              </h4>
            </p>
          </center>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card grey lighten-5">
        <div class="card-content">
          <span class="card-title">Total Exams</span>
          <center>
            <p>
              <h4>
                {{stats.totalExam}}
              </h4>
            </p>
          </center>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card grey lighten-5">
        <div class="card-content">
          <span class="card-title">Exmaination Summary</span>
          <ul class="collection">
            {{#each stats.examinationSummary as |summary|}}
              <li class="collection-item">{{summary.subject}} {{summary.level}} - {{summary.count}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card grey lighten-5">
        <div class="card-content">
          <span class="card-title">T-Shirt Summary</span>
          <ul class="collection">
            {{#each stats.tshirtSummary as |summary|}}
              <li class="collection-item">{{if summary.tShirtSize summary.tShirtSize "N/A"}} - {{summary.count}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
{{/if}}
