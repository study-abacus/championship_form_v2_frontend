<div class="my-background">
  <div class="container ">
    <div class="row">
      <div class="col s12 m6 offset-m3">
        <div class="card">
          <div class="card-content">
            <span class="card-title black-text">Sign In</span>
            <div class="row">
              <div class="input-field col s12">
                <Input id="user" class="validate" @type="text" @value={{username}} />
                <label for="user" class="active">User Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <Input id="user" class="validate" @type="password" @value={{password}} />
                <label for="pass" class="active">Password</label>
              </div>
            </div>
          </div>
          <div class="card-action">
            <button class="btn" {{action (perform loginTask)}} disabled={{loginTask.isRunning}}>
              {{#if loginTask.isRunning}}
                Logging in ...
              {{else}}
                Login
              {{/if}}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
